@model PagedList.IPagedList<WebAppEka.Models.Orders>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "TilausOtsikot";
}
@section scripts{
    <script type="text/javascript">
        $(function () {
            $(".showOrderClass").click(function () {                             /*kuuntelee elementi joiden luokka on "showOrderClass"*/
                let orderId = $(this).data("orderid");
                //alert("Klikkasit tilausnumeroa: " + orderId);
                var url = "/Orders/_TilausRivit/?OrderID=" + orderId;           /*luodaan kontrollerin url viittaus*/
                $("#orderDetails_" + orderId).append(" <b>Ladataan tilauksen " + orderId + "rivejä...</b>");
                var $detailDiv = $("#orderDetails_" + orderId);                 /*otetaan klikatun tilausotsikkorivin id talteen JQuery - muuttujaan $detailDiv*/
                console.log(url);
                console.log($detailDiv);
                $.get(url, function (data) {                                /*kutsutaan kontrollerin */
                    $detailDiv.replaceWith(data);                               /*korvataan $detailDiv - muuttujan elementin sisältö kontrollerin palauttamalla partial view:llä*/
                });

            });
        });
    </script>
}



<h2>TilausOtsikot</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>




@*----------------------------------------------------------------------the headers typed manually -formed, so they look different then data fields ZK-----------------------------------*@

<div class="container-fluid">
    <div class="card-header container-fluid">
        <a class="card-link">
            <form>
                <div class="input-group" style="position:sticky">
                    <div class="input-group-prepend'">
                        <span class="input-group-text bg-warning font-weight-bold" font-weight-bold>Order</span>
                    </div>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="Customer" disabled>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="ShipName" disabled>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="ShipAddress" disabled>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="ShipCity" disabled>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="ShipCountry" disabled>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="ShipRegion" disabled>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="Shippers.CompanyName" disabled>

                </div>
            </form>
        </a>
    </div>

    @*----------------------------------here comes the fields, with model, each has uniq href generated with model in order to call the collapse part ----------------------------------- ZK*@

    <div id="accordion">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-header">
                    <a class="card-link showOrderClass" data-orderid="@item.OrderID" data-toggle="collapse" href="#collapse_@item.OrderID">
                        <form>
                            <div class="input-group bg-light">
                                <div class="input-group-prepend'">
                                    <span class="input-group-text ">@Html.DisplayTextFor(modelItem => item.OrderID)</span>
                                </div>
                                <input type="text" class="form-control px-2" value="@Html.DisplayTextFor(modelItem =>item.Customers.CompanyName)" disabled>

                                <input type="text" class="form-control px-2" value="@Html.DisplayTextFor(modelItem =>item.ShipName)" disabled>
                                <input type="text" class="form-control px-2" value="@Html.DisplayTextFor(modelItem =>item.ShipAddress)" disabled>
                                <input type="text" class="form-control px-2" value="@Html.DisplayTextFor(modelItem =>item.ShipCity)" disabled>
                                <input type="text" class="form-control px-2" value="@Html.DisplayTextFor(modelItem =>item.ShipCountry)" disabled>
                                <input type="text" class="form-control px-2" value="@Html.DisplayTextFor(modelItem =>item.ShipRegion)" disabled>
                                <input type="text" class="form-control px-2" value="@Html.DisplayTextFor(modelItem =>item.Shippers.CompanyName)" disabled>



                            </div>
                        </form>
                    </a>
                </div>
                @*here comes te div which is collapsed ZK*@
                <div id="collapse_@item.OrderID" class="collapse" style="background-color:#cceeff" data-parent="#accordion">
                    <div class="card-body">

                        <div id="orderDetails_@item.OrderID"></div>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

<br />
Page@(Model.PageCount <Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("TilausOtsikot", new { page, sortOrder = ViewBag.CurrentSort, currentFilter1 = ViewBag.currentFilter1, currentProductCategory = ViewBag.currentProductCategory })) 