@model IEnumerable<WebAppEka.Models.Products>

@{
    ViewBag.Title = "ProdcCards2";
}

<h2>ProdcCards2</h2>

<div class="container-fluid">

    @foreach (var tuote in Model)
    {
        <div class="kelluu" style="background-color:cornflowerblue">


            <div class="card">
                <h5 class="card-title">@tuote.ProductName</h5>
                <img style="height: 200px; display: block;" src="@tuote.ImageLink" alt="Kuva" />
                <h4>Varastossa: @tuote.UnitsInStock kpl</h4>
                <h4>
                    @tuote.UnitPrice;
                </h4>
             
            </div>
        </div>

    }


</div>