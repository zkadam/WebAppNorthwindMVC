<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - versio 0.5</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/chart")
</head>
<body>

@{ 
    if (Session["UserName"]==null)
    {
    Html.RenderPartial("_NavbarLoggedOut");
    }
    else
    {

        Html.RenderPartial("_NavbarLoggedIn");
    }
    }
    <div class="container-fluid body-content ">
        @RenderBody()
        <hr />
        <footer class="oma-footer">
            @using System.Globalization
            <p>&copy; @DateTime.Now.Year - Careeria Northwind-sovellus</p>


            <p>@DateTime.Today.ToString("d", new CultureInfo("fi-Fi"))</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>

</html>
